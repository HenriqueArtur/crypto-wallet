<p id="notice"><%= notice %></p>

<div class="col-3">
    <div class="form-group">
      <%= label_tag nil, @mining_type.class.human_attribute_name(:description) %>
      <%= text_field_tag nil, @mining_type.description, class: "form-control", :readonly => true %>
    </div>

    <div class="form-group">
      <%= label_tag nil, @mining_type.class.human_attribute_name(:acronym) %>
      <%= text_field_tag nil, @mining_type.acronym, class: "form-control", :readonly => true %>
    </div>

    <%= link_to t('links.edit'), edit_mining_type_path(@mining_type), class: 'btn btn-primary' %>
    <%= link_to t('buttons.back'), mining_types_path, class: "btn btn-secondary" %>
</div>
